<% include ../partials/header %>

    <div class="container">
        <% if(data.length === 0) { %>
            <h3 id="title">No results found for "<%= query %>"</h3>
        <% } else { %>
            <h2 id="title">Results for "<%= query %>"</h2>
            <div class="row">
                <% for (let i=0; i < data.length; i++) { %>
                    <div class="col-md-4">
                        <a href="/product/<%= data[i]._source._id %>">
                            <div class="thumbnail">
                                <img src="<%= data[i]._source.image %>" alt="Product">
                                <div class="caption">
                                    <h3><%= data[i]._source.name %></h3>
                                    <p><%= data[i]._source.category.name %></p>
                                    <p>Rs.<%= data[i]._source.price %></p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            </div>
        <% } %>
    </div>

<% include ../partials/footer %>